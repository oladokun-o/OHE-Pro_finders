extends layout

block content
  include menu 
  .page-contn.p-0
    .page-width.p-0.pt-5.pt-md-3
      .container-fluid
      .form-gap
        //.alert-contn.justify-content-center.text-center.col-12.col-md-8.col-lg-9
          .col-12.col-md-6.alert.fade-out
        .container.fluid
          .row          
            .col-12.d-flex.justify-content-center
              .col-md-4.col-md-offset-4
                div      
                  script.
                    var id = '!{id}'            
                  if (id)
                    form.change-password
                      .text-center
                        h4
                          i.lni.lni-unlock.fa-4x.forgot-form-lock
                      h4.text-left.pt-3 Change Your Password
                      hr                        
                      .panel-body
                        #register-form.form(role='form' autocomplete='off' method='post')
                          .form-group.forgot-group
                            label Current Password:
                            .input-group
                              input#current_password.form-control.border-left(name='current_password' autocomplete="new-password" type='password'  required)
                          .form-group.forgot-group
                            label New Password:
                            .input-group
                              input#new_password.form-control.border-left(name='new_password'  autocomplete="new-password" type='password'  required)
                          .d-block.d-md-flex.justify-content-center.col-12.text-center
                            button(type="submit").primary-btn.proceed-change-password.mt-2 change password
                            button(type="button").primary-btn.cancel-change-password.mt-2.ml-2 cancel  
                  else
                    form.forgot-form
                      .text-center
                        h4
                          i.lni.lni-unlock.fa-4x.forgot-form-lock 
                      h4.text-left.pt-3 Forgot Your Password?
                      hr
                      p.text-left.text-muted.pb-3 Don't worry, happens to the best of us.
                      p.pb-3.text-left.thick.forgot-input-title Enter your account's email address.
                      .panel-body
                        #register-form.form(role='form' autocomplete='off' method='post')
                          .form-group.forgot-group
                            .input-group
                              span.input-group-addon
                                i.lni.lni-envelope.color-blue.forgot-form-mail
                              input#forgotEmail.form-control.border-left(name='forgotpassword' placeholder='Email Address' type='email' required)
                          .form-group.text-center
                            button.primary-btn.proceed-forgot-mail get recovery link               