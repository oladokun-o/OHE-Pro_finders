extends layout

block content
	style.
		.acc-card .card-header li{
			font-size: 15px;
			font-weight: bold;
			width: 100%;
			text-align: left;
			cursor: pointer;
		}
		.acc-card .card {    
			border-radius:0 !important;
			border-bottom: 2px solid #f5d0ba !important;
		}
		.acc-card .card-body li {
			cursor: pointer;      
			font-size: 15px;

		}
		.acc-card .card li:hover{
			text-decoration: none;
		}

	include menu 
	style.
		.search-icon{
			right: -25px;
		}
	.page-contn.p-0
		.page-width.p-0.mt-5.mt-md-1
